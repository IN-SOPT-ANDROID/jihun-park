<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:id ="@+id/music_item_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="20dp"
        >
        <androidx.appcompat.widget.AppCompatImageView
            android:id ="@+id/music_item_iv"
            android:layout_width="100dp"
            android:layout_height = "100dp"
            android:src="@color/black" />
    </androidx.cardview.widget.CardView>
    <TextView
        android:id ="@+id/music_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/music_item_cv"
        app:layout_constraintTop_toTopOf="@id/music_item_cv"
        android:text ="title"
        android:layout_marginTop="30dp"
        android:layout_marginStart="30dp"/>
    <TextView
        android:id ="@+id/music_item_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/music_item_cv"
        app:layout_constraintBottom_toBottomOf="@id/music_item_cv"
        android:text ="singer"
        android:layout_marginBottom="30dp"
        android:layout_marginStart="30dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>