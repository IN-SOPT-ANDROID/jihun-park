<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/gallery_img_iv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/home_profile_img_bino"/>
    <TextView
        android:id="@+id/gallery_desc_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/gallery_img_iv"
        app:layout_constraintStart_toStartOf="@id/gallery_img_iv"
        app:layout_constraintEnd_toEndOf="@id/gallery_img_iv"
        tools:text="제목"/>
</androidx.constraintlayout.widget.ConstraintLayout>