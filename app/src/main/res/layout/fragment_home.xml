<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.home.HomeFragment">

    <Button
        android:id="@+id/home_recycler_repo_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="@string/home_repo_add_btn">
    </Button>
    <Button
        android:id="@+id/home_recycler_repo_remove_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:text="@string/home_repo_remove_btn">
    </Button>
    <androidx.constraintlayout.helper.widget.Flow
        android:id="@+id/home_btn_flow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        android:orientation="horizontal"
        app:constraint_referenced_ids="home_recycler_repo_add_btn,home_recycler_repo_remove_btn"
        >
    </androidx.constraintlayout.helper.widget.Flow>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/home_recycler_repo"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="40dp"
        app:layout_constraintTop_toBottomOf="@id/home_btn_flow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/home_repo_content_item_view"
        >
    </androidx.recyclerview.widget.RecyclerView>
</androidx.constraintlayout.widget.ConstraintLayout>

